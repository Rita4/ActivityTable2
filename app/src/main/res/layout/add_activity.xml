<!-- 定义按钮的行 -->
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">
<Button
	android:id="@+id/bnAdd"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text= "添加"/>
<Button
	android:id="@+id/bnCancel"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="取消"/>
	<!--
	android:text="@string/add"
	android:text="@string/cancel"
	-->
</LinearLayout>
</TableLayout>
