<TableRow>
<TextView
	android:text="标题"
	android:textSize="20dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"/>
<EditText
	android:id="@+id/activityTitle"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:inputType="text"/>
</TableRow>
<TableRow>
<TextView
	android:text="地点"
	android:textSize="20dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"/>
<EditText
	android:id="@+id/activityPlace"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:inputType="text"/>
</TableRow>

<!-- 输入起拍价格的行 
